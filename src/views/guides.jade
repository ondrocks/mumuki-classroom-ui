.container

  .input-group
    i.input-group-addon.fa.fa-search
    input.form-control(id='filter', placeholder='{{ inputPlaceholder | translate }}', ng-model='listSearch')

  br

  div.list-group
    .list-group(ng-repeat='(chapter, guides) in chaptersAndLessons')
      #accordion.panel-group(role='tablist', aria-multiselectable='true')
        guide-list(name='{{chapter}}', list='guides', index='$index')
    guide-list(name='others', list='others')
  button.btn.btn-primary.pull-right(ng-if='isAdmin()', ui-sref='classroom.courses.new')
    | {{ 'new_course' | translate }}

